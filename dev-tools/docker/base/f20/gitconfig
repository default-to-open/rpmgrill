#[user] add user information in your local git repo
#   git config user.name
#   git config user.email
#    name = Sunil Thaha
#    email = sthaha@redhat.com
#
###  or ###
#[init]
#    templatedir = ~/path/to/gitconfig

[color]
    ui = auto

[color "branch"]
    current = green bold
    local = green
    remote = yellow

[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold

[color "status"]
    header = white
    branch =  blue bold
    nobranch =  red bold
    added =  yellow bold
    changed = yellow
    untracked = blue

# Highlight whitespace in diffs
[color "diff"]
    whitespace = red reverse

[core]
    whitespace=fix,-indent-with-non-tab,trailing-space,cr-at-eol
    editor = vim

[alias]
    a = add
    ai = add --interactive
    ap = add -p

    b = branch
    br = "!f(){ git branch -r | grep ${1:-origin}; }; f"

    c = commit
    ca = commit -am

    co = checkout

    d = diff
    dc = diff --cached

    f =  fetch
    fa =  fetch --all
    fm =  fetch --multiple

    g = grep
    gi = grep -i

    h = rev-parse HEAD

    l = log  --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
    lf = log --follow --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
    la = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative --all
    lola = log --graph --decorate --pretty=oneline --all --abbrev-commit --date=relative
    lol = log --graph --decorate --pretty=oneline --abbrev-commit --date=relative

    ls = ls-files

    modules = submodule foreach git

    rb = rebase
    ri = rebase --interactive

    s = status
    si = status --ignored

[branch]
    autosetupmerge = true

[push]
    default = tracking

[rerere]
    enabled = 1

[merge]
    tool = meld

